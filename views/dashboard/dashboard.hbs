<a href="/wedding/{{wedding.id}}/tokens">Tokens</a>

<div class="profile-container">
  <div class="profile-title">
    {{!-- <img src={{currentUser.image}} class="rounded-circle border border-3 m-4" width="200" alt={{currentUser.name}} referrerpolicy="no-referrer"> --}}
    <h1>{{wedding.title}}</h1>
    <hr class="my-4">
  </div>
  <div class="weddings">
    <div class="weddings-title">
      <h2>Tickets</h2>
    </div>
    <div class="weddings-list row">
      {{#each tickets as |ticket|}}
      <div class="d-flex ol-xl-4 col-md-4 col-sm-6 col-xs-12 p-2">
        <div class="wedding-card ">
          <div>
            <h3>{{ticket.user.name}}</h3>
            <p>🍽 Second: {{ticket.second}}</p>
            <p>🚌 Bus: {{#if ticket.bus}}Yes{{else}}No{{/if}}</p>
            <p>🏨 Hotel: {{#if ticket.hotel}}Yes{{else}}No{{/if}}</p>
          </div>
        </div>
      </div>
   
      {{/each}}
    </div>
  </div>

  <div class="weddings">
    <div class="weddings-title">
      <h2>Gifts</h2>
      <a href="/wedding/{{wedding.id}}/createGift">
        <button class="primary-btn">
          Create Gift
        </button>
      </a>
    </div>
    <div class="weddings-list row">
      {{#each wedding.gifts as |gift|}}
      <div class="d-flex ol-xl-4 col-md-4 col-sm-6 col-xs-12 p-2">
        <div class="gift-card ">
          <div>
            <img src="{{gift.image}}" alt="">
            <h3>{{gift.name}}</h3>
            <p>{{gift.description}}</p>
            <p>💶 Price: {{gift.price}}€</p>
          </div>
          <div>
            <button class="gift-btn">
              <a href="{{gift.link}}">Go to gift</a>
            </button>
          </div>
        </div>
      </div>
   
      {{/each}}
    </div>
  </div>
</div>